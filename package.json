{
  "name": "@ecomplus/firebase-app-boilerplate",
  "private": true,
  "version": "0.0.3",
  "description": "Boilerplate for E-Com Plus apps with Firebase Cloud Functions",
  "main": "functions/index.js",
  "scripts": {
    "serve": "FIREBASE_COMMAND=serve node ./firebase.js",
    "deploy": "NODE_ENV=production FIREBASE_COMMAND=deploy node ./firebase.js",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ecomclub/firebase-app-boilerplate.git"
  },
  "keywords": [
    "ecomplus",
    "ecomplus-app",
    "boilerplate",
    "express-app",
    "app-boilerplate"
  ],
  "author": "E-Com Club <ti@e-com.club>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ecomclub/firebase-app-boilerplate/issues"
  },
  "homepage": "https://github.com/ecomclub/firebase-app-boilerplate#readme",
  "dependencies": {
    "firebase-tools": "^7.13.0"
  },
  "optionalDependencies": {
    "dotenv": "^8.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "husky": "^4.2.3",
    "standard": "^14.3.1",
    "standard-version": "^7.1.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
